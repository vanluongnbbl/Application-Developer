<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Update Topic</title>
</head>
<body>
    <%- include('./partials/head.ejs') %>

<% if(locals.result) { %> 
    <div class="container">
        <form action="/staff/update-topic/<%= result[0].topic_id %>" method="POST">
            <br> <br>
            <h2><i class="fas fa-edit"></i> Update Topic</h2>
            <hr>
            <div class="row">
                <div class="col-md-4"><i class="fas fa-id-card"></i> Topic ID</div>
                <div class="col-md-8"><input class="form-control" type="text" name="topic_id" value="<%= result[0].topic_id %>" disabled></div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-4"><i class="fas fa-user-edit"></i> Title</div>
                <div class="col-md-8"><input class="form-control"  type="text" name="title" value="<%= result[0].title %>" required></div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-4"><i class="fas fa-audio-description"></i> Description</div>
                <div class="col-md-8"><input class="form-control" type="text" name="description" value="<%= result[0].description %>" required></div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-8"><button class="btn btn-success fa-pull-right"><i class="fas fa-edit"></i> Update</button></div>
            </div>
        </form>
    </div>            
<% } %>
</body>
</html>