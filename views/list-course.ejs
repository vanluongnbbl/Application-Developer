<!doctype html>
<html lang="en">
<head>
    <title>Courses List</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <script src="https://kit.fontawesome.com/3fa7701fe0.js" crossorigin="anonymous"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
  <body>
      <%- include('./partials/head.ejs') %>
      <div class="container">
        <br>
        <div class="row">
            <div class="col-md-4"><h2><i class="fas fa-users"></i> Courses List</h2></div>
            <div class="col-md-4"></div>
            <div class="col-md-4"><button class="btn btn-primary "><a href="/staff/list/enrollment" style="color: antiquewhite;">List enrollment</a></button>
            </div>
        </div>
        
        <hr>
        <div class="row">
            <div class="col-md-1"><i class="fas fa-id-card"></i> ID</div>
            <div class="col-md-2"><i class="fas fa-user-edit"></i> Title</div>
            <div class="col-md-2"><i class="fas fa-audio-description"></i> Description</div>
            <div class="col-md-2"><i class="fas fa-id-card-alt"></i> Coach Name</div>
            <div class="col-md-2"><i class="fas fa-id-card-alt"></i> Topic Title</div>
            <% if(encryptedCookies.role == 4) {  %>
            <div class="col-md-1">Edit\Delete</div>
        
            <% } %>
        </div>
        <hr>
        <% if(locals.result) { %>
            <% for(let i = 0; i < result.length; i++) { %>

                <div class="row">
                    <div class="col-md-1"><%= result[i].course_id %></div>
                    <div class="col-md-2"><a href="/staff/list-enrollment/<%= result[i].course_id %>"><%= result[i].title %></a></div>
                    <div class="col-md-2"><%= result[i].description %></div>
                    <div class="col-md-2"><%= result[i].dataValues.coachs.first_name + ' ' + result[i].dataValues.coachs.last_name %></div>
                    <div class="col-md-2"><%= result[i].dataValues.topics.title %></div>
                    <% if(encryptedCookies.role == 4) {  %>    
                        <div class="col-md-1"> <a href="/staff/update-course/<%= result[i].course_id %>"><i class="fas fa-edit"></i></a>
                            - <a href="/staff/delete-course/<%= result[i].course_id %>"><i class="fas fa-trash-alt"></i></a></div>
                    <% } %>
                </div>
            <% } %> 
        <% } %>
      </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>